{
  "extends": "../task-1.1-config.json",
  "extendedConfig": {
    "name": "extended-test-dependency-patterns",
    "version": "1.1.0",
    "createdFrom": "task 2.1",
    "extendsTask": "1.1"
  },
  "scheduling": {
    "dagAware": true,
    "parallelExecution": true,
    "maxParallelTasks": 5,
    "respectDependencies": true
  },
  "validation": {
    "checkDependencyCycles": true,
    "validatePhaseOrder": true,
    "strictDependencyCheck": true
  },
  "reporting": {
    "showProgress": true,
    "showCriticalPath": true,
    "showBlockedTasks": true
  },
  "execution": {
    "continueOnFailure": true,
    "maxRetries": 3,
    "retryDelayMs": 1000
  },
  "patterns": {
    "linear": {
      "description": "Tasks in a sequence: A → B → C",
      "example": ["5.1", "5.2", "5.3", "5.4", "5.5", "5.6"]
    },
    "diamond": {
      "description": "Classic diamond: A → B,C → D",
      "example": ["3.1", "3.2", "3.3", "3.4"]
    },
    "fanOut": {
      "description": "One task fans out to many",
      "example": ["6.1", "6.2", "6.3", "6.4"]
    },
    "fanIn": {
      "description": "Many tasks converge to one",
      "example": ["7.1", "7.2", "7.3", "7.4"]
    }
  }
}
