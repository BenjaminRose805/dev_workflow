{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "analysis-report.json",
  "title": "Analysis Report Schema",
  "description": "Schema for analysis reports produced by /analyze command",
  "type": "object",
  "required": ["artifact_type", "version", "created_at", "created_by", "command", "status", "analysis_type", "summary", "findings"],
  "properties": {
    "artifact_type": {
      "type": "string",
      "const": "analysis-report"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "created_by": {
      "type": "string",
      "enum": ["sonnet", "opus", "haiku"]
    },
    "command": {
      "type": "string",
      "const": "/analyze"
    },
    "subcommand": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "active", "superseded", "archived"]
    },
    "analysis_type": {
      "type": "string",
      "description": "Type of analysis performed",
      "enum": ["security", "performance", "quality", "dependency", "test", "architecture", "accessibility"]
    },
    "scope": {
      "type": "object",
      "description": "Scope of the analysis",
      "properties": {
        "files_analyzed": {
          "type": "integer",
          "minimum": 0
        },
        "lines_analyzed": {
          "type": "integer",
          "minimum": 0
        },
        "directories": {
          "type": "array",
          "items": { "type": "string" }
        },
        "excluded": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "summary": {
      "type": "object",
      "description": "Summary of analysis results",
      "required": ["total_findings"],
      "properties": {
        "total_findings": {
          "type": "integer",
          "minimum": 0
        },
        "by_severity": {
          "type": "object",
          "properties": {
            "critical": { "type": "integer", "minimum": 0 },
            "high": { "type": "integer", "minimum": 0 },
            "medium": { "type": "integer", "minimum": 0 },
            "low": { "type": "integer", "minimum": 0 },
            "info": { "type": "integer", "minimum": 0 }
          }
        },
        "by_category": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "minimum": 0
          }
        },
        "risk_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Overall risk score (0-100)"
        },
        "duration_ms": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "findings": {
      "type": "array",
      "description": "List of analysis findings",
      "items": {
        "type": "object",
        "required": ["id", "severity", "category", "message"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique finding identifier",
            "pattern": "^FIND-[A-Z0-9-]+$"
          },
          "severity": {
            "type": "string",
            "description": "Finding severity",
            "enum": ["critical", "high", "medium", "low", "info"]
          },
          "category": {
            "type": "string",
            "description": "Finding category"
          },
          "rule": {
            "type": "string",
            "description": "Rule or check that triggered this finding"
          },
          "location": {
            "type": "object",
            "description": "Location in the codebase",
            "properties": {
              "file": { "type": "string" },
              "line": { "type": "integer", "minimum": 1 },
              "column": { "type": "integer", "minimum": 1 },
              "end_line": { "type": "integer", "minimum": 1 },
              "end_column": { "type": "integer", "minimum": 1 }
            }
          },
          "message": {
            "type": "string",
            "description": "Human-readable description of the finding"
          },
          "details": {
            "type": "string",
            "description": "Detailed explanation"
          },
          "recommendation": {
            "type": "string",
            "description": "Suggested fix or improvement"
          },
          "code_snippet": {
            "type": "string",
            "description": "Relevant code snippet"
          },
          "references": {
            "type": "array",
            "description": "External references (CWE, OWASP, etc.)",
            "items": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "id": { "type": "string" },
                "url": { "type": "string", "format": "uri" }
              }
            }
          },
          "effort": {
            "type": "string",
            "description": "Estimated effort to fix",
            "enum": ["trivial", "low", "medium", "high"]
          },
          "confidence": {
            "type": "string",
            "description": "Confidence level of the finding",
            "enum": ["high", "medium", "low"]
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "description": "Quantitative metrics from analysis",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "value": { "type": "number" },
          "unit": { "type": "string" },
          "threshold": { "type": "number" },
          "status": {
            "type": "string",
            "enum": ["good", "warning", "critical"]
          }
        }
      }
    },
    "recommendations": {
      "type": "array",
      "description": "High-level recommendations based on analysis",
      "items": {
        "type": "object",
        "required": ["priority", "description"],
        "properties": {
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "description": { "type": "string" },
          "impact": { "type": "string" },
          "effort": { "type": "string" },
          "related_findings": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    }
  }
}
