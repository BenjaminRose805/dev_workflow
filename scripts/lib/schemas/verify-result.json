{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Verification Result Schema",
  "description": "Schema for validating task verification agent output",
  "type": "object",
  "required": ["task_id", "status", "confidence"],
  "properties": {
    "task_id": {
      "type": "string",
      "description": "Unique identifier of the task being verified",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "description": "Verification status of the task",
      "enum": ["DONE", "NEEDED"]
    },
    "confidence": {
      "type": "number",
      "description": "Confidence level of the verification (0-100)",
      "minimum": 0,
      "maximum": 100
    },
    "evidence": {
      "type": "array",
      "description": "Evidence supporting the verification status",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "missing_items": {
      "type": "array",
      "description": "Items or components that are missing (relevant when status is NEEDED)",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "suggestions": {
      "type": "array",
      "description": "Suggestions for completing or improving the task",
      "items": {
        "type": "string",
        "minLength": 1
      }
    }
  }
}
